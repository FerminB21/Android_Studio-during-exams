<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout

        android:id="@+id/activity_main" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/darker_gray" android:orientation="vertical" tools:context="MyApplication">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/home2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:paddingBottom="16dp" android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingTop="16dp" tools:context="MyFitApp">
        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:text="insert your age"
            android:textColor="#FFFFFF"/>

        <EditText android:id="@+id/age_field"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:text="insert your weight"
            android:textColor="#FFFFFF"/>

        <EditText android:id="@+id/Weight_field"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="insert your Height in cm "
            android:textColor="#FFFFFF"/>

        <EditText android:id="@+id/Height_field"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:paddingBottom="16dp" android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingTop="16dp" tools:context="MyFitApp">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="300dp"
            android:text="Save My Info"
            />
    </LinearLayout>

</RelativeLayout>