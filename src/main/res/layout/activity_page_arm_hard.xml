<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".arm_hard">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/arm_exercise_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeat warm up set 2-3 times"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/arm_exercise1_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 10 reps of push ups"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/arm_exercise2_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• jumping jacks for 3 minute"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/arm_exercise3_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• plank for 1-2 minutes"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/arm_exercise4_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeat main set 4-6 times "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/arm_exercise5_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 10 push ups "
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/arm_exercise7_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 10 narrow push ups "
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/arm_exercise6_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 10  diamond push ups "
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/arm_exercise8_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 10 pike push ups "
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/arm_exercise9_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 30 seconds plank "
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/arm_exercise10_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeat set 4 times "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/arm_exercise11_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 10 mechanical push ups "
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="380dp"
        android:text="end of exercises" />

</RelativeLayout>