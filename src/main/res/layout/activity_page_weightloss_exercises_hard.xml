<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weightloss_exercises_hard">



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <!-- weightloss hard -->
    <TextView
        android:id="@+id/weightloss_exercise_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeat the set 4-6 times \n(each set should be unbrekable)"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/weightloss_exercise1_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• run for 4 km"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/weightloss_exercise2_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• jump rope for 10 minutes"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/weightloss_exercise3_hard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="• 140 mountain climbers "
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/weightloss_exercisea_fterset_hard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" AFTER ALL SETS "
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/weightloss_exercise4_hard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="• if you have bike make \nan easy 5km distance "
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/LaunchMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="360dp"
        android:text="Show map" />
    <Button
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="400dp"
        android:text="end of exercises" />

</RelativeLayout>