<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="page2">



        <Button
            android:id="@+id/weight_image"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/weightloss"
            />
        <Button
            android:id="@+id/abs_image"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_marginTop="100dp"
            android:background="@drawable/abs"
            />
         <Button
             android:id="@+id/chest_image"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_marginTop="250dp"
            android:background="@drawable/chest" />
        <Button
            android:id="@+id/arm_image"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginTop="350dp"
            android:scaleType="fitXY"
            android:background="@drawable/arms"
            />

</RelativeLayout>